# Docker Environment Configuration
# Copy this file to .env and update the values as needed

# Basic Configuration
COMPOSE_PROJECT_NAME=proxmox-docker
COMPOSE_FILE=docker-compose.yml

# Network Configuration
DOCKER_BRIDGE_IP=172.18.0.1
DOCKER_SUBNET=172.18.0.0/16

# Nginx Configuration
NGINX_PORT=8080
NGINX_HOST=localhost

# Portainer Configuration
PORTAINER_PORT=9000
PORTAINER_ADMIN_PASSWORD=ChangeMePlease!

# Monitoring Configuration (for monitoring-docker-compose.yml)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
CADVISOR_PORT=8081
NODE_EXPORTER_PORT=9100

# Security
# Generate random secrets for production:
# openssl rand -hex 32
GRAFANA_SECRET_KEY=your-secret-key-here
PROMETHEUS_RETENTION_TIME=200h

# Storage Configuration
PROMETHEUS_DATA_PATH=./prometheus-data
GRAFANA_DATA_PATH=./grafana-data
PORTAINER_DATA_PATH=./portainer-data

# Resource Limits
NGINX_MEMORY_LIMIT=128m
PROMETHEUS_MEMORY_LIMIT=512m
GRAFANA_MEMORY_LIMIT=256m

# Timezone
TZ=Asia/Jakarta